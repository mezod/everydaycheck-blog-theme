{{!< default}}

<header id="site-head">
    {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
    <h1 class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
    <h2 class="blog-description">{{@blog.description}}</h2>
</header>

<main class="content" role="main">

    <article class="{{post_class}}" itemscope itemtype="http://schema.org/Article">

        {{#post}}

        <header>
        {{#if tags}}<div class="post-meta tags">Posted in {{tags}}</div>{{/if}}
        <h1 class="post-title" itemprop="headline">{{{title}}}</h1>
        <div class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}" itemprop="datePublished">{{date format="dddd, MMMM DD, YYYY"}}</time></div>
        </header>

        <section class="post-content" itemscope itemprop="articleBody">
            {{content}}
        </section>

        <section class="share">
            <p class="info">Share this post</p>
            <a class="icon-twitter" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <span class="hidden">Twitter</span>
            </a>
            <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <span class="hidden">Facebook</span>
            </a>
            <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <span class="hidden">Google+</span>
            </a>
        </section>

        <footer class="post-footer">

            {{#if author}}
            <section class="author">
                <address itemscope itemtype="http://schema.org/Person">
                    <img src="{{author.image}}" class="userimage" alt="{{author.name}}" itemprop="image"/>
                    <p class="attr">Author</p>
                    <h4 itemprop="author">{{author.name}}</h4>
                    <p class="bio">
                        <a href="{{author.website}}" itemprop="url">{{author.website}}</a>
                    </p>
                    <p class="bio">{{author.bio}}</p>
                </address>
            </section>
            {{/if}}

        </footer>

        {{/post}}
    
    <div id="disqus_thread"></div>
    <script>

    (function() { // DON'T EDIT BELOW THIS LINE
    var d = document, s = d.createElement('script');
    s.src = 'https://everydaycheck.disqus.com/embed.js';
    s.setAttribute('data-timestamp', +new Date());
    (d.head || d.body).appendChild(s);
    })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
                                

    </article>

</main>
